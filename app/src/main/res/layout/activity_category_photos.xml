<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:scrollbars="none"
    tools:context=".Photo.CategoryPhotos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_nam"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_islam"
                        android:text="@string/nam"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAM"
                        android:textSize="26sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_se"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_sad"
                        android:text="@string/nam"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SE"
                        android:textSize="26sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_bahasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:layout_weight="1"
                android:layout_below="@+id/btn_nam"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_translate"
                        android:text="@string/nam"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BAHASA"
                        android:textSize="26sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_kognitif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_123_numbers"
                        android:text="@string/nam" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KOGNITIF"
                        android:textSize="26sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_motorik_kasar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_dribbble_logo"
                        android:text="@string/nam" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motorik Kasar"
                        android:textSize="30sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_motorik_halus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="50dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_cubes"
                        android:text="@string/nam" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motorik Halus"
                        android:textSize="30sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_seni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_gravity="center"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_color_palette"
                        android:text="@string/nam" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seni"
                        android:textSize="30sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>